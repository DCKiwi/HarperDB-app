<!DOCTYPE html>
  <html>
    <head>
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <title>HarperDB</title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="stylesheet" type="text/css" media="screen" href="../css/styles.css" />
    </head>
    <body>
      <h1>HarperDB</h1>
      <h2>Select an existing schema or create a new one</h2>
  
      <!-- check to see if any schemas exist, if so render list -->
      <% if(schemas) { %>
        <div class="schema-select">
          <form method="post" action="/create_table">
            <label>Schemas</label><br>
            <select name="schemas" size="5">
                <% for (var i=0; i < schemas.length; i++) { %>
                  <option value=<%= schemas[i] %>  ><%= schemas[i] %></option>
                <%}%>
            </select>
            <br>
            <input type="submit">
          </form>
        </div>
      <%} else  {%>
        <h3>No schemas exist please create one</h3>
      <%}%>

      <form class="create-schema" method="post" action="/create_table">
        <label>Create Schema</label><br>
        <input type="text" name="schemaName" placeholder="Schema name"><br>
        <input type="submit">
      </form>

    </body>
  </html>
