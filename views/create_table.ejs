<!DOCTYPE html>
  <html>
    <head>
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <title>HarperDB</title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="stylesheet" type="text/css" media="screen" href="../css/styles.css" />
    </head>
    <body>
      <h1>HarperDB</h1>
      <h2>Select an existing table or create a new one</h2>
      <h3 class="schema-name"><%= message %></h3>
  
      <!-- check to see if any tables exist, if so render list -->
      <% if(tables.length !== 0) { %>
        <div class="tables-select">
          <form method="post" action="/display_insert">
            <label>Tables</label><br>
            <select name="existingTableName" size="5">
                <% for (var i=0; i < tables.length; i++) { %>
                  <option value=<%= tables[i] %>  ><%= tables[i] %></option>
                <%}%>
            </select>
            <br>
            <!-- pass current schema to next page, needed for query -->
            <input type="hidden" name="currentSchema" value=<%= schema %> >
            <input type="submit">
          </form>
        </div>
      <%} else  {%>
        <h3>No tables exist please create one</h3>
      <%}%>

    <form class="create-tables" method="post" action="/display_insert">
      <label>Create Table</label><br>
      <input type="text" name="createTableName" placeholder="Table name"><br>
      <!-- pass current schema to next page, needed for query -->
      <input type="hidden" name="currentSchema" value=<%= schema %> >
      <input type="submit">
    </form>
    <script>
    </script>
    </body>
  </html>
